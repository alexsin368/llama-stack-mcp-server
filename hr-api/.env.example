# Server Configuration
PORT=3000
NODE_ENV=production

# Security
ALLOWED_ORIGINS=*

# API Configuration
API_KEY_HEADER=X-API-Key

# Logging
LOG_LEVEL=info

# Database (if using a real database)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=hr_database
# DB_USER=hr_user
# DB_PASSWORD=hr_password

# Redis (for session storage if needed)
# REDIS_URL=redis://localhost:6379

# Monitoring
# SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_SWAGGER=true
ENABLE_RATE_LIMITING=true